{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build on WSL",
            "command": "gcc",
            "args": [
                "-g",
                "-o",
                "./${fileBasenameNoExtension}.out",
                "'${relativeFileDirname}/${fileBasename}'"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "gcc build task"
        },
        {
            "label": "run on WSL",
            "type": "shell",
            "command": "./${fileBasenameNoExtension}.out",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "gcc run task"
        }
    ],

}